{% extends "BpiAdminBundle::layout.html.twig" %}

{% block content %}
{% include 'BpiAdminBundle:Node:nav.html.twig' %}

<table class="table table-striped table-hover">
    <tr>
        <td>Tile</td>
        <td>{{ node.title }}</td>
    </tr>
    <tr>
        <td>Teaser</td>
        <td>{{ node.teaser }}</td>
    </tr>
    <tr>
        <td>Category</td>
        <td>{{ node.category.category }}</td>
    </tr>
    <tr>
        <td>Audience</td>
        <td>{{ node.audience.audience }}</td>
    </tr>
    <tr>
        <td>Materials</td>
        <td>
            {% for material in node.resource.materials %}
                <span>{{ material }}</span><br />
            {% endfor %}
        </td>
    </tr>
    <tr>
        <td>Assets</td>
        <td>
            {% for image in node.assets.collection %}
            <a href="{{ image.path }}">
                <img src="{{ image.path }}" alt="{{ image.title }}" width="100" height="100" />
            </a>
            {% endfor %}
        </td>
    </tr>
    <tr>
        <td>Deleted</td>
        <td>{% if node.deleted %}TRUE{% else %}FALSE{% endif %}</td>
    </tr>
</table>
{% endblock %}
